<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Student</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <style>
    :root{
      --primary:#1976D2;
      --primary-dark:#0D47A1;
      --accent:#FFC107;
      --white:#ffffff;
      --bg:#f4f6f9;
      --text:#212121;
      --muted:#757575;
      --shadow:0 8px 24px rgba(0,0,0,.12);
      --transition: all .3s ease;
    }

    *{box-sizing:border-box;}
    body{
      margin:0;
      font-family:'Poppins',sans-serif;
      background:var(--bg);
      color:var(--text);
      padding:24px;
    }

    .wrap{
      max-width:720px;
      margin:0 auto;
      background:var(--white);
      border-radius:14px;
      overflow:hidden;
      box-shadow:var(--shadow);
      animation:fadeIn .6s ease;
    }

    .head{
      background: linear-gradient(90deg,var(--primary),var(--primary-dark));
      color:#fff;
      padding:18px 22px;
    }
    .head h3{
      margin:0;
      font-weight:600;
      font-size:1.25rem;
      display:flex;
      align-items:center;
      gap:8px;
    }

    .content{
      padding:24px;
    }
    .content hr{
      border:none;
      border-top:2px solid #e3eaf4;
      margin:10px 0 20px;
    }

    form label{
      display:block;
      font-weight:600;
      color:var(--primary-dark);
      margin:12px 0 6px;
    }

    form input:not([type="file"]),
    form input[type="email"],
    form select{
      width:100%;
      padding:12px;
      border:1px solid #d6dbe3;
      border-radius:10px;
      background:#fafafa;
      font-size:.95rem;
      transition:var(--transition);
    }

    form input:not([type="file"]):focus,
    form select:focus{
      outline:none;
      background:#fff;
      border-color:var(--primary);
      box-shadow:0 0 0 3px rgba(25,118,210,.15);
    }

    .pass-wrap{
      position:relative;
    }
    .toggle-pass{
      position:absolute;
      right:10px;
      top:50%;
      transform:translateY(-50%);
      border:none;
      background:#eef3fb;
      color:var(--primary-dark);
      padding:6px 10px;
      border-radius:8px;
      font-size:.85rem;
      font-weight:600;
      cursor:pointer;
      transition:var(--transition);
    }
    .toggle-pass:hover{
      background:#e2ecfa;
      transform:translateY(-50%) translateX(-1px);
    }

    .btn-row{
      margin-top:18px;
      display:flex;
      gap:12px;
      flex-wrap:wrap;
    }
    button[type="submit"]{
      background:var(--primary);
      color:#fff;
      border:none;
      padding:12px 18px;
      border-radius:10px;
      font-weight:600;
      cursor:pointer;
      transition:var(--transition);
    }
    button[type="submit"]:hover{
      background:var(--primary-dark);
      transform:translateY(-2px);
      box-shadow:0 8px 18px rgba(0,0,0,.15);
    }
    .btn-cancel{
      text-decoration:none;
      background:#eef3fb;
      color:var(--primary-dark);
      padding:12px 16px;
      border-radius:10px;
      font-weight:600;
      transition:var(--transition);
      display:inline-block;
    }
    .btn-cancel:hover{
      background:#e2ecfa;
      transform:translateY(-2px);
    }

    .hint{
      color:var(--muted);
      font-size:.85rem;
      margin-top:6px;
    }

    @keyframes fadeIn{
      from{ opacity:0; transform: translateY(8px); }
      to{ opacity:1; transform: translateY(0); }
    }
  </style>
</head>
<body>

  <div class="wrap">
    <div class="head">
      <h3>ðŸ‘¤ Edit Student</h3>
    </div>

    <div class="content">
      <form action="/students/edit/<%= student._id %>" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= student.name %>" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= student.email %>" required>

        <label for="password">Password:</label>
        <div class="pass-wrap">
          <input type="text" id="password" name="password" value="<%= student.password %>" required>
          <button class="toggle-pass" type="button" id="togglePass">Show</button>
        </div>
        <div class="hint">Tip: Use a strong password. You can quickly mask/unmask using the button.</div>

        <!-- ðŸ”¹ Added Section Dropdown -->
        <label for="section">Section:</label>
        <select id="section" name="section" required>
          <option value="EV-1" <%= student.section === "EV-1" ? "selected" : "" %>>EV-1</option>
          <option value="EV-2" <%= student.section === "EV-2" ? "selected" : "" %>>EV-2</option>
          <option value="EV-3" <%= student.section === "EV-3" ? "selected" : "" %>>EV-3</option>
          <option value="EV-4" <%= student.section === "EV-4" ? "selected" : "" %>>EV-4</option>
          <option value="EV-5" <%= student.section === "EV-5" ? "selected" : "" %>>EV-5</option>
        </select>

        <div class="btn-row">
          <button type="submit">Update Student</button>
          <a href="/dashboard?page=students" class="btn-cancel">Cancel</a>
        </div>
      </form>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const toggle = document.getElementById('togglePass');
      const input = document.getElementById('password');

      input.type = 'password';
      toggle.textContent = 'Show';
      let masked = true;

      toggle.addEventListener('click', () => {
        masked = !masked;
        input.type = masked ? 'password' : 'text';
        toggle.textContent = masked ? 'Show' : 'Hide';
      });
    });
  </script>

</body>
</html>