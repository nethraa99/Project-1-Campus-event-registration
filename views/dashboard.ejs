<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #1976D2;
      --primary-dark: #0D47A1;
      --accent: #FFC107;
      --white: #ffffff;
      --light: #f4f6f9;
      --text-dark: #212121;
      --text-light: #757575;
      --shadow: 0 8px 25px rgba(0,0,0,0.12);
      --shadow-strong: 0 15px 35px rgba(0,0,0,0.2);
      --success: #43A047;
      --danger: #E53935;
      --gradient: linear-gradient(135deg, #1976D2, #0D47A1);
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: var(--light);
      margin: 0;
      padding: 0;
      display: flex;
      height: 100vh;
    }

    /* Sidebar */
    .sidebar {
      width: 225px;
      background: var( --light);
      color: var(--primary-dark);
      display: flex;
      flex-direction: column;
      padding: 25px 20px;
      box-shadow: var(--shadow);
      position: fixed;
      top: 0; bottom: 0; left: 0;
    }
    .sidebar h4 {
      text-align: center;
      margin-bottom: 30px;
      font-size: 1.4rem;
      font-weight: 600;
    }
    .sidebar a {
      color: var(--primary-dark);
      text-decoration: none;
      padding: 12px 18px;
      margin: 8px 0;
      border-radius: 20px;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 10px;
      font-size: 0.95rem;
      font-weight: 500;
    }
    .sidebar a:hover,
    .sidebar a.active {
      background: rgba(7, 17, 107, 0.2);
      padding-left: 22px;
    }
    .sidebar .logout {
      margin-top: auto;
      background: var(--accent);
      color: #333;
      font-weight: bold;
      text-align: center;
      padding: 12px;
      border-radius: 10px;
      cursor: pointer;
      transition: 0.3s;
    }
    .sidebar .logout:hover {
      background: #ffcf43;
      transform: scale(1.05);
    }

    /* Main Content */
    .main {
      margin-left: 250px;
      flex: 1;
      padding-bottom: 40px;
    }

    /* Header */
    .header {
      background: var(--gradient);
      color: var(--white);
      text-align: center;
      padding: 2rem;
      font-size: 1.8rem;
      font-weight: 600;
      box-shadow: var(--shadow-strong);
    }
    .header p {
      font-size: 1rem;
      font-weight: 400;
      margin-top: 6px;
      color: #f1f1f1;
    }

    /* ‚úÖ Alert Messages */
    .alert {
      margin: 20px auto;
      max-width: 800px;
      padding: 15px 18px;
      border-radius: 10px;
      font-weight: 500;
      box-shadow: var(--shadow);
      animation: fadeIn .6s ease;
      text-align: center;
    }
    .alert-success {
      background: #e8f5e9;
      color: var(--success);
      border-left: 6px solid var(--success);
    }
    .alert-danger {
      background: #fdecea;
      color: var(--danger);
      border-left: 6px solid var(--danger);
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* Stats */
    .stats {
      display: flex;
      gap: 20px;
      margin: 30px;
      justify-content: center;
      flex-wrap: wrap;
    }
    .stat-card {
      flex: 1;
      min-width: 220px;
      padding: 25px;
      border-radius: 15px;
      background: var(--white);
      box-shadow: var(--shadow);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      text-align: center;
      cursor: pointer;
      animation: fadeUp 1s ease;
    }
    .stat-card:hover {
      transform: translateY(-8px);
      box-shadow: var(--shadow-strong);
    }
    .stat-card h3 {
      font-size: 1rem;
      margin-bottom: 8px;
      color: var(--text-light);
    }
    .stat-card p {
      font-size: 2rem;
      font-weight: 700;
      color: var(--primary-dark);
    }

    /* Charts */
    .charts {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 25px;
      margin: 30px;
    }
    .chart-box {
      background: var(--white);
      padding: 25px;
      border-radius: 15px;
      box-shadow: var(--shadow);
      transition: 0.4s ease;
      animation: fadeUp 1s ease;
    }
    .chart-box:hover {
      transform: translateY(-6px);
      box-shadow: var(--shadow-strong);
    }
    .chart-box h3 {
      text-align: center;
      margin-bottom: 15px;
      color: var(--primary-dark);
    }

    /* Animations */
    @keyframes fadeUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @media (max-width: 900px) {
      .charts { grid-template-columns: 1fr; }
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <h4>‚öôÔ∏è Admin Panel</h4>
    <a href="/dashboard?page=home" class="<%= !page || page==='home' ? 'active' : '' %>">üè† Dashboard Home</a>
    <a href="/dashboard?page=create" class="<%= page==='create' ? 'active' : '' %>">‚ûï Create Event</a>
    <a href="/dashboard?page=manage" class="<%= page==='manage' ? 'active' : '' %>">üìÖ Manage Events</a>
    <a href="/dashboard?page=students" class="<%= page==='students' ? 'active' : '' %>">üë®‚Äçüéì Student Details</a>
    <a href="/dashboard?page=registrations" class="<%= page==='registrations' ? 'active' : '' %>">‚úÖ Event Registrations</a>
    <a href="/logout" class="logout">üö™ Logout</a>
  </div>

  <!-- Main -->
  <div class="main">
    <!-- Header -->
    <div class="header">
      WELCOME, ADMIN üëã
      <p>Your control hub for analytics & management</p>
    </div>

    <!-- ‚úÖ Message Alert -->
    <% if (msg) { %>
      <% if (msg.includes("‚ùå")) { %>
        <div class="alert alert-danger"><%= msg %></div>
      <% } else { %>
        <div class="alert alert-success"><%= msg %></div>
      <% } %>
    <% } %>

    <% if (!page || page === "home") { %>
      <!-- Stats -->
      <div class="stats">
        <div class="stat-card">
          <h3>üë®‚Äçüéì Total Students</h3>
          <p><%= totalStudents || 0 %></p>
        </div>
        <div class="stat-card">
          <h3>üìÖ Total Events</h3>
          <p><%= totalEvents || 0 %></p>
        </div>
        <div class="stat-card">
          <h3>üïí Pending Registrations</h3>
          <p><%= registrations.filter(r => r.status === 'pending').length || 0 %></p>
        </div>
      </div>

      <!-- Charts -->
      <div class="charts">
        <div class="chart-box">
          <h3>üìä Approved Students (Pie)</h3>
          <canvas id="sectionChart"></canvas>
        </div>
        <div class="chart-box">
          <h3>üìä Registrations by Section (Bar)</h3>
          <canvas id="barChart"></canvas>
        </div>
      </div>
    <% } %>

    <% if (page === "create") { %>
      <%- include("createEvent") %>
    <% } else if (page === "manage") { %>
      <%- include("manageEvents") %>
    <% } else if (page === "students") { %>
      <%- include("studentDetails", { students: students }) %>
    <% } else if (page === "editStudent" && student) { %>
      <%- include("editStudent", { student: student }) %>
    <% } else if (page === "registrations") { %>
      <%- include("eventRegistrations", { registrations: registrations }) %>
    <% } %>
  </div>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    <% if (!page || page === "home") { %>
      const allRegs = <%- JSON.stringify(registrations) %>;
      const totals = {}, approved = {};
      allRegs.forEach(r => {
        if (!r.student) return;
        const sec = r.student.section || "Unknown";
        totals[sec] = (totals[sec]||0)+1;
        if (r.status==="approved") approved[sec]=(approved[sec]||0)+1;
      });

      // Pie chart
      new Chart(document.getElementById("sectionChart"), {
        type: "pie",
        data: {
          labels: Object.keys(approved),
          datasets: [{
            data: Object.values(approved),
            backgroundColor: ["#1976D2","#43A047","#FBC02D","#E53935","#8E24AA","#00ACC1"],
            hoverOffset: 12
          }]
        },
        options: {
          plugins: { legend: { position: "bottom" } },
          animation: { animateRotate: true, duration: 1200 }
        }
      });

      // Bar chart
      const sections = Object.keys(totals);
      new Chart(document.getElementById("barChart"), {
        type: "bar",
        data: {
          labels: sections,
          datasets: [
            { label:"Total", data:sections.map(s=>totals[s]||0), backgroundColor:"#1976D2" },
            { label:"Approved", data:sections.map(s=>approved[s]||0), backgroundColor:"#43A047" }
          ]
        },
        options: {
          plugins: { legend:{position:"top"} },
          scales:{ y:{ beginAtZero:true } },
          animation: { duration: 1500, easing: "easeOutBounce" }
        }
      });
    <% } %>
  </script>
</body>
</html>